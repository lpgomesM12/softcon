<section class="content-header">
  <%if notice%>
    <div class="alert alert-success" role="alert"><%= notice %></div>
   <%end%>
</section>

<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Reserva</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">


<p>
    <strong>Local Reserva:</strong>
    <%= @reserva.tiporeserva.desc_tiporeserva %>
</p>

<p>
  <strong>Data reserva:</strong>
  <%= @reserva.data_reserva.blank? ? '' : @reserva.data_reserva.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Hora inicio:</strong>
  <%= @reserva.hora_inicio %>
</p>

<p>
  <strong>Hora fim:</strong>
  <%= @reserva.hora_fim %>
</p>

<p>
  <strong>Data do Comprovante:</strong>
  <%=@reserva.created_at.strftime("%d/%m/%Y %H:%M:%S" ) %>
</p>
<p>
  <strong>Apartamento:</strong>
  <%= @reserva.apartamento.numr_apartamento %> - <%= @reserva.apartamento.numr_bloco %>
</p>

<p>
  <strong>Nome solicitante:</strong>
  <%= @reserva.nome_solicitante %>
</p>

<p>
  <strong>Email solicitante:</strong>
  <%= @reserva.email_solicitante %>
</p>


</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
     <%= link_to edit_reserva_path(@reserva), :class => "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to reservas_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
