<section class="content-header">

</section>

<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Produtos</h3>
             </div><!-- /.box-header -->
     <div class="box-body table-responsive no-padding">
 <table class="table table-hover">
  <thead>
    <tr>
      <th>Produto</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome_produto %></td>
        <td align='right'>
          <div class="btn-group">
              <%= link_to produto, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
              <% end %>
              <%= link_to edit_produto_path(produto), class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
              <% end %>
             <%= link_to produto, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
              <% end %>
          </div>
         </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div><!-- /.box -->

<%= link_to new_produto_path, class: "btn btn-default btn-sm" do %>
       <span class="glyphicon glyphicon-file"></span>Novo
<% end %>
