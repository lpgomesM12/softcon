<section class="content-header">
      <!--Mensagens aqui-->
    <%if notice%>
      <div class="alert alert-success" role="alert"><%= notice %></div>
     <%end%>
</section>

<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Achado e perdido</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">

<p>
  <strong>Descricao:</strong>
  <%= @achadoperdido.descricao %>
</p>

<p>
  <strong>Data achado:</strong>
  <%=@achadoperdido.data_achado.blank? ? '' : @achadoperdido.data_achado.strftime("%d/%m/%Y")%>
</p>

<p>
  <strong>Data entrega:</strong>
  <%=@achadoperdido.data_entrega.blank? ? '' : @achadoperdido.data_entrega.strftime("%d/%m/%Y")%>
</p>

<p>
  <strong>Observacao:</strong>
  <%= @achadoperdido.observacao %>
</p>

<p>
  <strong>Morador:</strong>
  <%= @achadoperdido.morador_id != nil ? @achadoperdido.morador.pessoa.nome_pessoa : ""%>
</p>

</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
 <%= link_to edit_achadoperdido_path(@achadoperdido), :class => "btn btn-default btn-sm" do %>
<span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to achadoperdidos_path, :class => "btn btn-default btn-sm" do %>
 <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
