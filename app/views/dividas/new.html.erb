<h1>New Divida</h1>

<%= render 'form' %>

<%= link_to 'Back', dividas_path %>






<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Despesas</h3>
             </div><!-- /.box-header -->
   <div class="box-body table-responsive no-padding">
 <table class="table table-hover">
  <thead>
    <tr>
      <th>Data Vencimento</th>
      <th>Valor</th>
      <th>Data Pagamento</th>
      <th>CPF/CPNJ</th>
      <th>Desc observacao</th>
      <th>Numg tipopagamento</th>
      <th>Data cadastro</th>
      <th>Desc docprincipal</th>
      <th>Data cancelamento</th>
      <th>Data pagamento</th>
      <th>Valr pagamento</th>
      <th>Valr multa</th>
      <th>Valr juro</th>
      <th>Numr notafiscal</th>
      <th>Numr parcela</th>
      <th>Desc caminhocheque</th>
      <th>Flag ordinaria</th>
      <th>Flag despesafixa</th>
      <th>Condominio</th>
      <th>Contabanck</th>
      <th>Prestador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dividas.each do |divida| %>
      <tr>
        <td><%= divida.numr_tipodivida %></td>
        <td><%= divida.numr_cheque %></td>
        <td><%= divida.data_vencimento %></td>
        <td><%= divida.valr_divida %></td>
        <td><%= divida.desc_observacao %></td>
        <td><%= divida.numg_tipopagamento %></td>
        <td><%= divida.data_cadastro %></td>
        <td><%= divida.desc_docprincipal %></td>
        <td><%= divida.data_cancelamento %></td>
        <td><%= divida.data_pagamento %></td>
        <td><%= divida.valr_pagamento %></td>
        <td><%= divida.valr_multa %></td>
        <td><%= divida.valr_juro %></td>
        <td><%= divida.numr_notafiscal %></td>
        <td><%= divida.numr_parcela %></td>
        <td><%= divida.desc_caminhocheque %></td>
        <td><%= divida.flag_ordinaria %></td>
        <td><%= divida.flag_despesafixa %></td>
        <td><%= divida.condominio %></td>
        <td><%= divida.contabank %></td>
        <td><%= divida.prestador %></td>
        <td><%= link_to 'Show', divida %></td>
        <td><%= link_to 'Edit', edit_divida_path(divida) %></td>
        <td><%= link_to 'Destroy', divida, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div><!-- /.box -->
<%= link_to new_divida_path, class: "btn btn-default btn-sm" do %>
       <span class="glyphicon glyphicon-file"></span>Novo
<% end %>
</section>
