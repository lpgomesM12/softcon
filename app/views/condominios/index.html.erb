<section class="content-header">
    <h1>
      <!--Mensagens aqui-->
      <%if notice %>
       <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4>  <i class="icon fa fa-check"></i>Mensagem</h4>
          <%= notice %>
      </div>
      <%end%>
    <!--<small></small>-->
    </h1>
</section>

 <!-- Main content -->
 <section class="content">
    <!-- Small boxes (Stat box) -->
       <div class="box box-primary">
             <div class="box-header with-border">
               <h3 class="box-title">Condominios</h3>
              </div><!-- /.box-header --> 
      <div class="box-body table-responsive no-padding">             
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Cidade</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @condominios.each do |condominio| %>
                <tr>
                  <td><%= condominio.nome_condominio %></td>
                  <<td><%= condominio.endereco.bairro.cidade.nome_cidade %></td>
                <td align='right'>
                  <div class="btn-group">
                      <%= link_to condominio, class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
                      <% end %>             
                      <%= link_to edit_condominio_path(condominio), class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
                      <% end %>
                     <%= link_to condominio, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                        <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
                      <% end %> 
                  </div>
                  </td> 
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div><!-- /.box -->
           <%= link_to new_condominio_path, class: "btn btn-default btn-sm" do %>
                  <span class="glyphicon glyphicon-file"></span>Novo
          <% end %>
  </section>


