<section class="content-header">
    <h6>
      <!--Mensagens aqui-->
    <p id="notice"><%= notice %></p>
    </h6>
  </section>

   <!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Bairro</h3>
       </div><!-- /.box-header -->
 <form role="form">
  <div class="box-body">
<p>
  <strong>Nome condominio:</strong>
  <%= @condominio.nome_condominio %>
</p>

<p>
  <strong>Data cancelamento:</strong>
  <%= @condominio.data_cancelamento %>
</p>

<p>
  <strong>Email:</strong>
  <%= @condominio.email %>
</p>

<p>
  <strong>Endereco:</strong>
  <%= @condominio.endereco.desc_endereco %>  <%= @condominio.endereco.cidade.nome_cidade%> - <%= @condominio.endereco.cidade.estado.sigl_estado%>
</p>

   </div><!-- /.box -->
  </form>
</div><!-- /.box-body -->

<div class="btn-group">
   <%= link_to edit_condominio_path(@condominio), :class => "btn btn-default btn-sm" do %>
<span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
<%= link_to condominios_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
