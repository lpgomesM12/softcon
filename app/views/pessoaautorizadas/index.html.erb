<!-- Main content -->
<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Cadastro de pessoas Autorizadas ou Bloqueadas</h3>
             </div><!-- /.box-header -->
     <div class="box-body table-responsive no-padding">
         <table class="table table-hover">
           <thead>
             <tr>
               <th>Identificação</th>
               <th>Nome</th>
               <th>Segunda</th>
               <th>Terça</th>
               <th>Quarta</th>
               <th>Quinta</th>
               <th>Sexta</th>
               <th>Sábado</th>
               <th>Domingo</th>
               <th>Data.Autorização</th>
               <th>Autorizações</th>
               <th>Nessa.Data</th>
               <th>Data.Inicio</th>
               <th>Data.Fim</th>
               <th>Hora.Inicio</th>
               <th>Hora.Fim</th>
               <th colspan="3"></th>
             </tr>
           </thead>

           <tbody>
             <% @pessoaautorizadas.each do |pessoaautorizada| %>
               <tr>
                 <td><%= pessoaautorizada.identificacao.desc_identificador %></td>
                 <td><%= pessoaautorizada.identificacao.desc_identificador.desc_nome %></td>
                 <td><%= pessoaautorizada.desc_atribuicao %></td>
                 <td><%= pessoaautorizada.flag_todasemana %></td>
                 <td><%= pessoaautorizada.flag_segunda %></td>
                 <td><%= pessoaautorizada.flag_terca %></td>
                 <td><%= pessoaautorizada.flag_quarta %></td>
                 <td><%= pessoaautorizada.flag_quinta %></td>
                 <td><%= pessoaautorizada.flag_sexta %></td>
                 <td><%= pessoaautorizada.flag_sabado %></td>
                 <td><%= pessoaautorizada.flag_domingo %></td>
                 <td><%= pessoaautorizada.data_periodoinicio %></td>
                 <td><%= pessoaautorizada.data_periodofim %></td>
                 <td><%= pessoaautorizada.flag_nestadata %></td>
                 <td><%= pessoaautorizada.numr_horainicio %></td>
                 <td><%= pessoaautorizada.numr_horafim %></td>
               <td align='right'>
                 <div class="btn-group">
                     <%= link_to pessoaautorizada, class: "btn btn-default btn-sm" do %>
                       <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
                     <% end %>
                     <%= link_to edit_pessoaautorizada_path(pessoaautorizada), class: "btn btn-default btn-sm" do %>
                       <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
                     <% end %>
                    <%= link_to pessoaautorizada, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                       <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
                     <% end %>
                 </div>
                 </td>
               </tr>
             <% end %>
           </tbody>
         </table>
       </div>
     </div><!-- /.box -->
          <%= link_to new_pessoaautorizada_path, class: "btn btn-default btn-sm" do %>
                 <span class="glyphicon glyphicon-file"></span>Novo
         <% end %>
 </section>

