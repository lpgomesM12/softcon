    <script type="text/javascript">

    function envia_email(){
      $.ajax({
        url: '<%= emailcontato_path %>',
        data : {
          nome : $("#nome").val(),
          email : $("#email").val(),
          telefone : $("#telefone").val(),
          duvida : $("#duvida").val()
        },
        success: function(data){
             $("#nome").val("");
             $("#email").val("");
             $("#telefone").val();
             $("#duvida").val();

             Alert("Email enviado com sucesso");
        }
      })
    };


