<section class="content-header">
    <%if notice%>
      <div class="alert alert-success" role="alert"><%= notice %></div>
      <%end%>
</section>


<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Morador</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">

<p>
  <strong>Data encomenda:</strong>
  <%= @encomenda.data_encomenda.blank? ? '' : @encomenda.data_encomenda.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Data entrega:</strong>
  <%= @encomenda.data_entrega.blank? ? '' : %>
</p>

<p>
  <strong>Mensagem:</strong>
  <%= @encomenda.msg_encomenda %>
</p>

<p>
  <strong>Morador:</strong>
  <%= @encomenda.morador.pessoa.nome_pessoa %>
</p>


</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
     <%= link_to edit_encomenda_path(@encomenda), :class => "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to encomendas_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
