<section class="content-header">
    <%if notice%>
      <div class="alert alert-success" role="alert"><%= notice %></div>
      <%end%>
</section>


<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Pessoa</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">

<br>
<p>
    <strong>Nome:</strong>
    <%= @pessoacondominio.pessoa.nome_pessoa %>
</p>

<p>
    <strong>CPF:</strong>
    <%= @pessoacondominio.pessoa.cpf %>
</p>
<p>
    <strong>RG:</strong>
    <%= @pessoacondominio.pessoa.rg %>
</p>

<p>
    <strong>Email:</strong>
    <%= @pessoacondominio.pessoa.email_pessoa %>
</p>

<hr>
<h3>Veículos</h3>
<% @pessoacondominio.pessoa.veiculos.each do |v| %>
<p>
    <strong>Descrição Vaículo:</strong>
    <%= v.desc_veiculo %>
</p>
<p>
    <strong>Placa:</strong>
    <%= v.desc_placa %>
</p>
-----------------------------------------------------------
<%end%>

</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
     <%= link_to edit_pessoacondominio_path(@pessoacondominio), :class => "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to pessoacondominios_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
