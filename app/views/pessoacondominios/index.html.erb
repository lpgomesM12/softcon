<!-- Main content -->
<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Pessoas</h3>
             </div><!-- /.box-header -->
     <div class="box-body table-responsive no-padding">
         <table class="table table-hover">
           <thead>
             <tr>
               <th>Nome</th>
               <th colspan="3"></th>
             </tr>
           </thead>

           <tbody>
            <% @pessoacondominios.each do |pessoacondominio| %>
               <tr>
                 <td><%= pessoacondominio.pessoa.nome_pessoa %></td>
               <td align='right'>
                 <div class="btn-group">
                     <%= link_to pessoacondominio, class: "btn btn-default btn-sm" do %>
                       <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
                     <% end %>
                     <%= link_to edit_pessoacondominio_path(pessoacondominio), class: "btn btn-default btn-sm" do %>
                       <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
                     <% end %>
                    <%= link_to pessoacondominio, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                       <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
                     <% end %>
                 </div>
                 </td>
               </tr>
             <% end %>
           </tbody>
         </table>
       </div>
     </div><!-- /.box -->
          <%= link_to new_pessoacondominio_path, class: "btn btn-default btn-sm" do %>
                 <span class="glyphicon glyphicon-file"></span>Novo
         <% end %>
 </section>
