<meta charset="utf-8">

<hr>
 <table>
   <td style="font-size: 12px"> <strong><%=@condominio%></strong></td>
   <td style="font-size: 12px; padding-left:17em" align="right">Periodo de <%=@data_inicio%> a <%=@data_fim%><td>
   <td style="font-size: 12px" align="right">
     <strong>Total de registros: <%=@acessos.length%></strong><br>
     wwww.softcontecnologia.com.br - Sistemas para condominio
   </td>

 </table>
<hr>
<div  class="row">
  <div class="col-lg-12">
       <table class="table table-hover">
         <thead>
           <tr>
             <th align="left">Unidade</th>
             <th align="left">Entrada</th>
             <th align="left">Saída</th>
             <th align="left">Idenficação</th>
             <th align="left">Nome</th>
             <th align="left">Descrição</th>
             <th align="left">Operador</th>
             <th colspan="3"></th>
           </tr>
         </thead>

         <tbody>
             <% @acessos.each do |acesso| %>
             <tr>
               <td><%= acesso.apartamento.numr_bloco%> - <%= acesso.apartamento.numr_apartamento%></td>
               <td><%= acesso.created_at.blank? ? '' : acesso.created_at.strftime("%d/%m/%Y")%></td>
               <td><%= acesso.data_saida.blank? ? '' : acesso.data_saida.strftime("%d/%m/%Y")%></td>
               <td><%= acesso.identificacao.desc_identificador %></td>
               <td><%= acesso.identificacao.desc_nome %></td>
               <td><%= acesso.desc_ocorrencia %></td>
               <td><%= acesso.userbaixa.pessoa.nome_pessoa rescue nil  %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
 </div>
</div>


<style media="screen">

table {
   display: table;
   border-collapse: separate;
   border-spacing: 2px;
   border-color: gray;
   width:100%;
}


.table > tbody > tr > td {
  font-size: 11px;
}
.table > thead > tr > th {
  font-size: 11px;
}

</style>
