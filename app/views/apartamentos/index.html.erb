<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Apartamentos</h3>
             </div><!-- /.box-header -->
     <div class="box-body table-responsive no-padding">
 <table class="table table-hover">
  <thead>
    <tr>
      <th>NÂ° Apartamento</th>
      <th>Bloco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartamentos.each do |apartamento| %>
      <tr>
        <td><%= apartamento.numr_apartamento %></td>
        <td><%= apartamento.numr_bloco %></td>
        <td align='right'>
          <div class="btn-group">
              <%= link_to apartamento, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
              <% end %>
              <%= link_to edit_apartamento_path(apartamento), class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
              <% end %>
             <%= link_to apartamento, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
              <% end %>
          </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div><!-- /.box -->
<%= link_to new_apartamento_path, class: "btn btn-default btn-sm" do %>
       <span class="glyphicon glyphicon-file"></span>Novo
<% end %>
</section>

<div align="center">
<%= paginate @apartamentos, window: 2 %>
</div>
