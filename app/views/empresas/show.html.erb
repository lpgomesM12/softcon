<section class="content-header">
    <h6>
      <!--Mensagens aqui-->
    <p id="notice"><%= notice %></p>
    </h6>
</section>

<section class="content">
    <!-- Small boxes (Stat box) -->
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Empresa</h3>
       </div><!-- /.box-header -->
 <form role="form">
  <div class="box-body">

<p>
  <strong>Nome empresa:</strong>
  <%= @empresa.nome_empresa %>
</p>

<p>
  <strong>Cnpj:</strong>
  <%= @empresa.cnpj %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @empresa.descricao %>
</p>

<p>
  <strong>Endereco:</strong>
  <%= @empresa.endereco.desc_endereco %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= @empresa.endereco.cidade.nome_cidade %> - <%= @empresa.endereco.cidade.estado.sigl_estado %>
</p>

 </div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
   <%= link_to edit_empresa_path(@empresa), :class => "btn btn-default btn-sm" do %>
<span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
   <%= link_to empresas_path, :class => "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
