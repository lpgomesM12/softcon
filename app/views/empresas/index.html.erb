<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Empresas</h3>
             </div><!-- /.box-header -->
     <div class="box-body table-responsive no-padding">
 <table class="table table-hover">
  <thead>
    <tr>
      <th>Nome Empresa</th>
      <th>CNPJ</th>
      <th>Endere√ßo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
     <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nome_empresa %></td>
        <td><%= empresa.cnpj %></td>
        <td><%= empresa.endereco.desc_endereco %></td>
        <td align='right'>
          <div class="btn-group">
              <%= link_to empresa, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
              <% end %>
              <%= link_to edit_empresa_path(empresa), class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
              <% end %>
             <%= link_to empresa, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
              <% end %>
          </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div><!-- /.box -->
<%= link_to new_empresa_path, class: "btn btn-default btn-sm" do %>
       <span class="glyphicon glyphicon-file"></span>Novo
