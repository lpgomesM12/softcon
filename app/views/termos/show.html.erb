<section class="content-header">
    <%if notice%>
      <div class="alert alert-success" role="alert"><%= notice %></div>
      <%end%>
</section>

<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Prestador</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">
<p>
  <strong>Nome termo:</strong>
  <%= @termo.nome_termo %>
</p>
<p>
  <strong>Tipo termo:</strong>
  <%= @termo.tipotermo.nome_tipotermo %>
</p>

<p>
  <%= @termo.text_termo.html_safe %>
</p>

</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
    <%= link_to edit_termo_path(@termo), :class => "btn btn-default btn-sm" do %>
 <span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to termos_path, :class => "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
