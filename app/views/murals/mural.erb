<section class="content-header">
  <%= form_tag nil, method: 'GET' do %>
    <div class="row">
      <div class="col-lg-12">
        <div class="input-group">
          <input id="q" name="q" type="text" value="<%=@q%>" class="form-control" placeholder="Pesquise pelo documento">
          <span class="input-group-btn">
            <button class="btn btn-success" type="submit" >Buscar</button>
          </span>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    <br />
  <% end %>
</section>

<br>
<!-- row -->
       <div class="row">
         <div class="col-md-12">
           <!-- The time line -->
        <ul class="timeline">
         <% @murals.each do |mural| %>

             <li>
               <i class="fa fa-file-pdf-o bg-blue"></i>
               <div class="timeline-item">
                 <span class="time"><i class="fa fa-clock-o"></i> <%=mural.created_at.strftime("%d/%m/%Y -%R")%></span>
                 <h3 class="timeline-header"><%= link_to mural.titulo, mural.pdf.url, :target=>"_blank"%></h3>
                 <div class="timeline-footer">

                     <p><%=mural.descricao%></p>

                 </div>
               </div>
             </li>
             <%end%>
             <li>
             </li>
           </ul>
         </div><!-- /.col -->
       </div><!-- /.row -->
</section>
