  <meta charset="utf-8">

  <hr>
   <table>
     <td><%=@condominio%></td>
     <td style="font-size: 10px" align="right">Periodo de <%=@data_inicio%> a <%=@data_fim%></td>
   </table>
  <hr>
  <div  class="row">
    <div class="col-lg-12">
         <table class="table table-hover">
           <thead>
             <tr>
               <th align="left">Unidade</th>
               <th align="left">Data reserva</th>
               <th align="left">Local reserva</th>
               <th align="left">La√ßamento</th>
               <th align="left">Solicitante</th>
               <th colspan="3"></th>
             </tr>
           </thead>

           <tbody>
               <% @reservas.each do |reserva| %>
               <tr>
                 <td style="font-size: 12px"><%= reserva.apartamento.numr_bloco%> - <%= reserva.apartamento.numr_apartamento%></td>
                 <td style="font-size: 12px"><%= reserva.data_reserva.blank? ? '' : reserva.data_reserva.strftime("%d/%m/%Y")%></td>
                 <td style="font-size: 12px"><%= reserva.tiporeserva.desc_tiporeserva %></td>
                 <td style="font-size: 12px"><%= reserva.created_at.blank? ? '' : reserva.created_at.strftime("%d/%m/%Y")%></td>
                 <td style="font-size: 12px"><%= reserva.nome_solicitante %></td>
               </tr>
             <% end %>
           </tbody>
         </table>
   </div>
  </div>


  <style media="screen">

  table {
     display: table;
     border-collapse: separate;
     border-spacing: 2px;
     border-color: gray;
     width:100%;
  }

  </style>
