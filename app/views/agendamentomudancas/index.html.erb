<section class="content">
   <!-- Small boxes (Stat box) -->
      <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Agendamento de mudan√ßas</h3>
             </div><!-- /.box-header -->
<div class="box-body table-responsive no-padding">
 <table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tel.</th>
      <th>Apartamento</th>
      <th>Agendamento</th>
      <th>Taxa</th>
      <th>Periodo</th>
      <th>Observacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @agendamentomudancas.each do |agendamentomudanca| %>
      <tr>
        <td><%= agendamentomudanca.nome %></td>
        <td><%= agendamentomudanca.fone %></td>
        <td><%= agendamentomudanca.apartamento.nome %></td>
        <td><%= agendamentomudanca.data_agendamento.blank? ? '' : agendamentomudanca.data_agendamento.strftime("%d/%m/%Y") %></td>
        <td><%= agendamentomudanca.valr_taxa %></td>
        <td><%= agendamentomudanca.periodo %></td>
        <td><%= agendamentomudanca.observacao %></td>

        <td align='right'>
          <div class="btn-group">
              <%= link_to agendamentomudanca,  :rel=>"tooltip", :title=>"Ver" , class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt text-success"></span>
              <% end %>
              <%= link_to edit_agendamentomudanca_path(agendamentomudanca),  :rel=>"tooltip", :title=>"Editar",  class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil text-primary"></span>
              <% end %>
             <%= link_to agendamentomudanca, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, :rel=>"tooltip", :title=>"Excluir",  class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash text-danger"></span>
              <% end %>
              <%= link_to relmudanca_path(id: agendamentomudanca, format: :pdf), :rel=>"tooltip", :title=>"Imprimir", class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-print"></span>
              <% end %>
          </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div><!-- /.box -->
<%= link_to new_agendamentomudanca_path, class: "btn btn-default btn-sm" do %>
       <span class="glyphicon glyphicon-file"></span>Novo
<% end %>
</section>
